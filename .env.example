# Google Cloud Platform / Firebase Configuration
GOOGLE_APPLICATION_CREDENTIALS=./serviceAccountKey.json
GOOGLE_CLOUD_PROJECT=your-project-id

# External API Configuration
S2_API_KEY=your-semantic-scholar-api-key-optional
OPENALEX_EMAIL=your-email@example.com
CROSSREF_MAILTO=your-email@example.com

# Feature Flags (v0 defaults)
USE_PUBSUB_AS_SOURCE=false
USE_TASKS_FANOUT=false
ENABLE_ANALYTICS=true

# Application Configuration
FLASK_ENV=development
PORT=3000
LOG_LEVEL=INFO

# Cloud Run specific (set in Cloud Run environment, not in .env)
# These are examples - do not set locally
# CLOUD_RUN_SERVICE_ACCOUNT=scheduler@your-project.iam.gserviceaccount.com
